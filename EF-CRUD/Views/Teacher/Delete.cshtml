@model EF_CRUD.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center bg-gradient" style="background: linear-gradient(90deg, #f87171, #ef4444);">
                    <h2 class="text-white mb-0 fw-bold">Delete Teacher</h2>
                </div>
                <div class="card-body p-4">
                    <p class="mb-3 fs-5">Are you sure you want to delete this teacher?</p>
                    
                    <div class="mb-4 p-3 border rounded-3 bg-light shadow-sm">
                        <p><strong>@Model.Name</strong> - @Model.Subject</p>
                        <p>Email: @Model.Email</p>
                        <p>Age: @Model.Age</p>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-gradient btn-lg fw-semibold text-white shadow-sm" style="background: linear-gradient(90deg, #ef4444, #b91c1c);">
                            Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3 shadow-sm">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}