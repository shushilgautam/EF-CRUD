@model IEnumerable<EF_CRUD.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}
<style>
    /* Card + general (variables inlined) */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: all .25s ease;
    }
    .card:hover {
        box-shadow: 0 10px 18px rgba(0,0,0,0.07);
    }

    /* Card header */
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0,0,0,0.04);
        padding: 1rem 1.25rem;
        border-radius: 12px 12px 0 0 !important;
    }

    /* Buttons */
    .btn {
        border-radius: 8px;
        font-weight: 500;
        transition: all .25s ease;
    }
    .btn-primary {
        background-color: #4361ee;
        border-color: #4361ee;
        color: #fff;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
    }

    /* Table */
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: .8rem;
        color: #6c757d;
        border-top: none;
    }
    .table td {
        vertical-align: middle;
        padding: .9rem .75rem;
        border-color: #f0f0f0;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(67,97,238,0.03);
    }

    /* small helpers */
    .text-muted {
        color: #6c757d !important;
    }

</style>

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm rounded-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Teachers</h5>
                        <small class="text-muted">Manage teacher records</small>
                    </div>
                    <div>
                        <a asp-action="Create" class="btn btn-primary btn-sm">Add New Teacher</a>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Subject</th>
                                    <th scope="col" class="text-center">Age</th>
                                    <th scope="col">Email</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            No teachers found. Click <a asp-action="Create">Add New Teacher</a> to create one.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var teacher in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@teacher.Name</td>
                                            <td class="text-muted">@teacher.Subject</td>
                                            <td class="text-center">@teacher.Age</td>
                                            <td class="text-truncate" style="max-width:220px;">@teacher.Email</td>
                                            <td class="text-end">
                                                <div class="d-inline-flex gap-1">
                                                    <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer text-muted small d-flex justify-content-between">
                        <div>
                            Showing <strong>@(Model?.Count() ?? 0)</strong> teachers
                        </div>
                        <div class="d-none d-sm-block">
                            Tip: use the action buttons to edit or remove entries
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
