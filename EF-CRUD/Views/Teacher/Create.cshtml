@model EF_CRUD.Models.Teacher

@{
    ViewData["Title"] = "Create Teacher";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center bg-gradient" style="background: linear-gradient(90deg, #4ade80, #10b981);">
                    <h2 class="text-white mb-0 fw-bold">Create Teacher</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control rounded-3" placeholder="Full Name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Subject" class="form-control rounded-3" placeholder="Subject" />
                            <label asp-for="Subject">Subject</label>
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Age" class="form-control rounded-3" placeholder="Age" type="number" />
                            <label asp-for="Age">Age</label>
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control rounded-3" placeholder="Email" type="email" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-gradient btn-lg fw-semibold text-white shadow-sm" style="background: linear-gradient(90deg, #06b6d4, #3b82f6);">
                                Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3 shadow-sm">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
